[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# fzf + rg
if [[ -x "$(command -v fzf)" && -x "$(command -v rg)" ]]; then
  export FZF_DEFAUL_COMMAND='rg --files --hidden --smart-case --glob=\!{.git/,node_modules/}'
  export FZF_CTRL_T_COMMAND="${FZF_DEFAUL_COMMAND}"
  export FZF_ALT_C_COMMAND="${FZF_DEFAUL_COMMAND}"
  export FZF_DEFAULT_OPTS='--height 40% --reverse --border'
fi

if [[ -f $CONFIGS/env_apps_fzf_void ]]; then
  . $CONFIGS/env_apps_fzf_void
fi

